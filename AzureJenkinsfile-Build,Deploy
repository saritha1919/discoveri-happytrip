pipeline {
         agent any
	 parameters{
	        string(defaultValue: "true", description: '', name: 'AzureDevOpsURL')
		string(defaultValue: "true", description: '', name: 'TomcatURL')
	}
             stages {
	    
                 stage('Source') {
                    steps {
                       checkout([$class: 'GitSCM', branches: [[name: '*/master']], doGenerateSubmoduleConfigurations: false, extensions: [], submoduleCfg: [], userRemoteConfigs: [[url: params.AzureDevOpsURL]]])
			           }        
                 }
                  stage('Build') {
                          tools {
                                jdk 'jdk8'
                                maven 'Maven'
                            }
                            steps {
                                    
                               powershell 'mvn clean package'
                                     
                            }
                  }
                  stage('Archiving Artifacts') { 
                         steps{ 
                             archiveArtifacts 'target/*.war' 
                         }
                  } 
                  stage('Deployment'){
			             steps{
				              script{
				              deploy adapters: [tomcat7(credentialsId: '2262fca6-ee0c-4626-a239-37f0ae306f14', path: '', url: params.TomcatURL)], contextPath: 'HappyTripAssignment-Azuredevops', onFailure: false, war: '**/*.war'
			                }
			             }
		           }
         }
}
